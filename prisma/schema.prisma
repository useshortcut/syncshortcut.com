datasource db {
    provider = "postgres"
    url      = env("DATABASE_URL")
}

generator client {
    provider      = "prisma-client-js"
    binaryTargets = ["native", "linux-musl"]
}

model SyncedIssue {
    id String @id @default(cuid())

    githubIssueNumber BigInt
    shortcutStoryNumber Int    @map("linearIssueNumber")

    githubIssueId BigInt
    shortcutStoryId String    @map("linearIssueId")

    shortcutTeamId String     @map("linearTeamId")
    ShortcutTeam   ShortcutTeam @relation(fields: [shortcutTeamId], references: [teamId])

    githubRepoId BigInt
    GitHubRepo   GitHubRepo @relation(fields: [githubRepoId], references: [repoId])

    @@map("synced_issues")
}

model ShortcutTeam {
    id String @id @default(cuid())

    teamId   String @unique
    teamName String

    publicLabelId String

    archivedStateId String
    doneStateId     String
    startedStateId  String

    Sync Sync[]

    SyncedIssue SyncedIssue[]
    Milestone   Milestone[]

    @@map("shortcut_teams")
}

model GitHubRepo {
    id String @id @default(cuid())

    repoId   BigInt @unique
    repoName String

    webhookSecret String

    Sync Sync[]

    SyncedIssue SyncedIssue[]
    Milestone   Milestone[]

    @@map("github_repos")
}

model Sync {
    id String @id @default(cuid())

    githubUserId BigInt
    shortcutUserId String    @map("linearUserId")

    GitHubRepo     GitHubRepo @relation(fields: [githubRepoId], references: [repoId])
    githubRepoId   BigInt
    githubApiKey   String
    githubApiKeyIV String

    ShortcutTeam     ShortcutTeam @relation(fields: [shortcutTeamId], references: [teamId])
    shortcutTeamId   String       @map("linearTeamId")
    shortcutApiKey   String       @map("linearApiKey")
    shortcutApiKeyIV String       @map("linearApiKeyIV")

    @@unique([githubUserId, shortcutUserId, githubRepoId, shortcutTeamId])
    @@map("syncs")
}

model User {
    id String @id @default(cuid())

    githubUserId   BigInt
    githubUsername String
    githubEmail    String?

    shortcutUserId   String  @map("linearUserId")
    shortcutUsername String  @map("linearUsername")
    shortcutEmail    String? @map("linearEmail")

    @@unique([githubUserId, shortcutUserId])
    @@map("users")
}

model Milestone {
    id String @id @default(cuid())

    milestoneId Int
    cycleId     String

    GitHubRepo   GitHubRepo @relation(fields: [githubRepoId], references: [repoId])
    githubRepoId BigInt

    ShortcutTeam   ShortcutTeam @relation(fields: [shortcutTeamId], references: [teamId])
    shortcutTeamId String       @map("linearTeamId")

    @@unique([milestoneId, githubRepoId, cycleId, shortcutTeamId])
    @@map("milestones")
}
